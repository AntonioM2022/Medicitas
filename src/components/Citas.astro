---
const { citas = [] } = Astro.props;
console.log("Props recibidos en Citas:", citas);
---

<input type="text" class="bg-white m-10 w-1/2 rounded-lg font-bold p-2" placeholder="Buscar">
<button class="text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Buscar</button>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200 shadow-md rounded-lg overflow-hidden">
    <thead>
      <tr class="bg-gray-800 text-gray-100 text-left">
        <th class="py-3 px-6 text-sm font-semibold">Paciente</th>
        <th class="py-3 px-6 text-sm font-semibold">Ubicaci√≥n</th>
        <th class="py-3 px-6 text-sm font-semibold">Fecha</th>
        <th class="py-3 px-6 text-sm font-semibold">Hora</th>
      </tr>
    </thead>
    <tbody>
      {citas.map(cita => (
        <tr class="border-b border-gray-200 hover:bg-gray-100">
          <td class="py-4 px-6 text-gray-800 text-sm">{cita.patient}</td>
          <td class="py-4 px-6 text-gray-800 text-sm">{cita.location}</td>
          <td class="py-4 px-6 text-gray-800 text-sm">{new Date(cita.appointment).toLocaleDateString()}</td>
          <td class="py-4 px-6 text-gray-800 text-sm">{new Date(cita.appointment).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
