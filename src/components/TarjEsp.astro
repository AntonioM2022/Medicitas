  <!-- Imagen del doctor -->
  <img src={foto} alt={nombre} class="h-24 w-24 object-cover rounded-full mr-4" />

  <!-- Informaci칩n del doctor -->
  <div class="flex-1">
    <h2 class="text-xl font-semibold">{nombre}</h2>
    <p class="text-gray-600">{especialidad}</p>
    <p class="text-gray-500">Contacto: {contacto}</p>
    <p class="text-gray-500">Correo: {correo}</p>
    <p class="text-gray-700 mt-2">{descripcion}</p>

    <!-- Bot칩n Ver M치s -->
    <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
      Ver M치s
    </button>
  </div>
</div>
